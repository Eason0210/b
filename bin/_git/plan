#!/bin/bash
set -e

cd ~/src/github.com/Shopify/dev-infra-scratch

git pull

vim \~burke/plan.md

echo "commit+push plan?"

while IFS= read -rn1 a; do
  case "${a}" in
  y) break  ;;
  n) exit 1 ;;
  *)        ;;
  esac
done

echo

git add \~burke/plan.md
git commit -m 'autocommit ~burke/plan.md'
git push
