# Git {{{
grbom    : gcom && gfrom && git reset --hard FETCH_HEAD && gco - && git rebase master
grbog    : grbom && gufg

grim     : git rebase -i master
gtl      : git tag -l
ga       : git add
gaac     : git add -A .; gac
gfrom    : gfro master
gfro     : gfr origin
gap      : git add -p
gav      : git commit -av
gb       : git branch
gbl      : git branch -l
gu       : git push
gut      : git push --tags
guo      : git push origin
gufo     : git push -f origin
gcaar    : git add -A .; git commit -a --reuse-message=HEAD --amend
gcar     : git commit -a --reuse-message=HEAD --amend
gcm      : git commit -m
gco      : git checkout
gcob     : git checkout -b
gcom     : git checkout master
gcp      : git cherry-pick
gd       : git pull
gdu      : git pull && git push
gf       : git diff
gfc      : git diff --cached
gl       : git log
glr      : git log --reverse
glp      : git log -p
glpr     : git log -p --reverse
gm       : git merge
gn       : git clone
grh      : git reset HEAD
gri      : git rebase -i
grc      : git rebase --continue
gra      : git rebase --abort
gs       : git stash
gsa      : git stash apply
gsd      : git stash drop
gsl      : git stash list
gsp      : git stash pop
gt       : git status -sb
gwc      : git whatchanged
gx       : open -a gitx .
gr       : git reset HEAD
gr1      : git reset 'HEAD^'
gr2      : git reset 'HEAD^^'
gro      : git reset
grh      : git reset --hard HEAD
grh1     : git reset --hard 'HEAD^'
grh2     : git reset --hard 'HEAD^^'
grho     : git reset --hard
# }}}

mutt     : kick-gpg-agent; bash --login -c 'cd ~/Desktop; /usr/local/bin/mutt'
less     : /usr/bin/less -FXRS
tmux     : /usr/bin/env TERM=screen-256color-bce tmux
tree     : tree -I 'Godep*'

xk9      : xargs kill -9
ka9      : killall -9
k9       : kill -9

